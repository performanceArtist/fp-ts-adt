{
  "compilerOptions": {
    "strict": true,
    "outDir": "dist",
    "declaration": true,
    "module": "commonjs",
    "target": "es6",
    "lib": [],
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": ["node_modules", "src/**/*.spec.ts", "src/examples"]
}
